. lib/flavour vanilla
. lib/testcase

opts1=`grep '//[ \t]*VERIFY_OPTS:' $1 | sed 's/^[^:]*: //'` || true
opts2=`grep '/\*[ \t]*VERIFY_OPTS:.*\*/' $1 | sed 's/^[^:]*:[ \t]*\(.*\)*\*\//\1/'` || true
optStd=
echo "$1" | grep -q '.cpp$' && optStd="-std=c++14"
opts=`eval echo "$optStd $opts1 $opts2"`
divine verify --threads 1 --max-backtrace-depth 65536 $opts "$1" | tee verify.out
check verify "$1"

# vim: syntax=sh
