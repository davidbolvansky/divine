. lib/flavour vanilla
. lib/testcase

getopt() {
  perl -ne "print \$1 if (m,/\* $1: (.*?) \*/, or m,// $1: (.*?)\n,)" $2
}

optStd=
echo "$1" | grep -q '.cpp$' && optStd="-std=c++14"
opts=$(eval echo $optStd $(getopt VERIFY_OPTS $1))
args=$(eval echo $(getopt PROGRAM_OPTS $1))
divine verify --threads 1 --max-backtrace-depth 65536 $opts "$1" $args | tee verify.out
check verify "$1"

# vim: syntax=sh
